@model TaskProject.Models.ApplicationUser

@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BEGIN: Header-->
<partial name="_NavBar" />
<!-- END: Header-->
<!-- BEGIN: Main Menu-->
<partial name="_Menu" />
<!-- END: Main Menu-->
<!-- BEGIN: Content-->
<h1>EditUser</h1>


<!-- Basic multiple Column Form section start -->
<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper container-xxl p-0">
        <div class="content-body">
            <section id="multiple-column-form">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title"> Edit User</h4>
                            </div>
                            <div class="card-body">
                                <form class="form" asp-action="UpdateUser" asp-controller="Home">
                                    <input type="hidden"  asp-for="Id"/>
                                    <div class="row">
                                        <div class="col-md-6 col-12">
                                            <div class="mb-1">
                                                <label class="form-label" for="first-name-column">Full Name </label>
                                                <input asp-for="fullName" type="text" id="first-name-column" class="form-control" placeholder="First Name" >
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="mb-1">
                                                <label class="form-label" for="last-name-column">User Name </label>
                                                <input type="text" asp-for="UserName" id="last-name-column" class="form-control" placeholder="Last Name" >
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="mb-1">
                                                <label class="form-label" for="city-column">Email</label>
                                                <input type="email" asp-for="Email" id="city-column" class="form-control" placeholder="City" >
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="mb-1">
                                                <label class="form-label" for="country-floating">Phone Number</label>
                                                <input type="text" asp-for="PhoneNumber" id="country-floating" class="form-control"  placeholder="Country">
                                            </div>
                                        </div>
                                  
                                   
                                        <div class="col-12">
                                            <button type="submit" class="btn btn-primary me-1 waves-effect waves-float waves-light">Submit</button>
                                        
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

